        Scanner sc = new Scanner (System.in);
        int day,year;
        int MIN = 5 , MAX =8 ;
        System.out.println("Enter a year : ");
        year = sc.nextInt();
        System.out.println("Enter day (0 = Sunday, 1 = Monday ,...) : ");
        day = sc.nextInt();
            for(int i = 1 ; i <= MAX ; i++){
                if(i == MIN){
                    System.out.println("\nMay " + year);
                    System.out.print("Sun  Mon  Tue  Wed  Thu  Fri  Sat ");
                    for(int d = 0 ; d < day ; d++)
                        System.out.println("   ");
                    for(int j =1 ; j <=31 ; j++ ){
                        System.out.printf("%-5d",j);
                        day++;
                        day%=7;
                        if(day==0)
                            System.out.println("");
                    }
                }
                else if(i==MAX){
                    
                    System.out.println("\n\nAugust " + year );
                    System.out.print("Sun  Mon  Tue  Wed  Thu  Fri  Sat ");
                    for(int d = 0 ; d < day; d++)
                        System.out.println("   ");
                    for(int j =1 ; j <= 31 ; j++){
                        System.out.printf("%-5d",j);
                        day++;
                        day%=7;
                        if (day== 0)
                            System.out.println("");
                    }   
                    System.out.println("");
                }
                else if(i==2){
                    if(isLeap(year))
                        day = (day+29)%7;
                    else
                        day = (day+28)%7;
                }
                else if (i ==4 || i == 6){
                    day = (day+30)%7;
                }
                else {
                    day = (day+31) % 7;
                }
            }
        }       
    public static boolean isLeap(int y){ // new function 
        if(y%400==0 || (y%4==0 && y%100 != 0)) // leap year formula 
            return true;
        else 
            return false ;        
    }
}

public class L4Q5 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int score1, score2, dice;
        Random rand = new Random();
        score1 = score2 = 0;
        boolean isPlayer1Turn = true;
        while(score1<=100 && score2<=100){
            
            if(isPlayer1Turn){
                System.out.println("Player 1's turn, press Enter to roll dice");
                sc.nextLine();
                dice = rand.nextInt(6)+1;
                score1 += dice;
                if(dice != 6){
                isPlayer1Turn = !isPlayer1Turn;
                }
                System.out.println("Player 1 gets " + dice + " points, total point is " + score1);
            } else {
                System.out.println("Player 2's turn, press Enter to roll dice");
                sc.nextLine();
                dice = rand.nextInt(6)+1;
                score2 += dice;
                if(dice != 6){
                isPlayer1Turn = !isPlayer1Turn;
                }
                System.out.println("Player 2 gets " + dice + " points, total point is " + score2);
            }
        }
        if(score1 > score2){
            System.out.println("Player1 win");
        } else {
            System.out.println("Player2 win");
        }
    }
}

public class L4Q6 {
     public static void main(String[] args) {
        Random r = new Random ();
        String str ;
        int num , i;
        num = r.nextInt();
        while (num<0){
            num = r.nextInt();
            str = Integer.toString(num) + " " ; // convert integer to string
            for ( i = 0; str.charAt(i)!= ' ' ; i++){ // return string as a character and algorithm to increase the count digit if there is no space
            }
            System.out.println("The number of digit for the negative numbers " + num + " is " + i);
        }
        
    }
}

public class L4Q7 {
    public static void main(String[] args) {
      first:
         for (int i = 0; i < 3; i++) {
            for (int j = 0; j < 3; j++){
               if(i == 1){
                  continue first;
               }
               System.out.print(" [i = " + i + ", j = " + j + "] ");
            }
         }
         System.out.println();
     
      second:
         for (int i = 0; i < 3; i++) {
            for (int j = 0; j < 3; j++){
               if(i == 1){
                  break second; // label for specified loop
               }
               System.out.print(" [i = " + i + ", j = " + j + "] ");
            }
        }
    }
}

