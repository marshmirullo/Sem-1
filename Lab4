//       } while (status);
//        
//        // Further Calculation
//        count = count - 1;
//        average = total / count;
//        s = Math.sqrt((s - (Math.pow((total), 2)/count))/(count - 1)); 
//        // standard deviation formula
//                
//        System.out.println("Minimum Score: " + min);
//        System.out.println("Maximum Score: " + max);
//        System.out.printf("Average Score: %.2f\n", average);
//        System.out.printf("Standard Deviation: %.2f", s);
//        System.out.println();
     
        int score , count = 0 , min = 0 , max = 0 ,total =0 ;
        double average = 0 , s =0 ;
        boolean status = true ;
        do {
            System.out.println("Enter a score : ");
            score = sc.nextInt();
            count++; // to record numbers input 
                if(score < 0){
                    status = false ;
                }
                    else
                    {
                    if (score > max){
                    max = score;
                        }
                    if (score < min){
                    min = score; 
                    }
                    total += score ;
                    s += Math.pow(score,2); // total score power 2
                    }
        }   while (status);
            count -= 1;
            average = total / count ; 
            s = Math.sqrt((s - (Math.pow((total),2)/count))/(count-1)); // kene susun betul2
            
            System.out.println("Minimum score : " + min);
            System.out.println("Maximum score : " + max);
            System.out.println("Average score : " + average);
            System.out.println("Standard deviation : " + s);
            System.out.println("");
    }
}

