class CalculatePayment {
    public static void MonthlyPayment (){
    }
}
public class L2Q2 {
    public static void main(String[] args) {
        Scanner sc = new Scanner (System.in);
        double M, P , D , R , Y ;
        System.out.println("Input price of car = ");
        P = sc.nextDouble();
        System.out.println("Input down payment = ");
        D = sc.nextDouble();
        System.out.println("Input interest rate in percent : ");
        R = sc.nextDouble();
        System.out.println("Input loan duration in year : ");
        Y = sc.nextDouble();
        M = ( P - D ) * (1 + R*Y / 100) / (Y*12);
        System.out.printf("The monthly payment is :%.2f", M );
        
        
    }
}

import java.util.Random;

public class L2Q3 {
    public static void main(String[] args) {
        /*Random r = new Random ();
        final int MAX =50 , MIN=10 ; 
        int num ,total = 0;
        double average = 0 ;
        for(int i = 1 ; i <= 3 ; i++){
            num = r.nextInt((MAX-MIN)+1) + MIN;
            total += num;
