        }
        System.out.println("Total :" + total);
        System.out.printf("Average :%.2f",average);
        */
        Random r = new Random ();
        int num1 , num2 , num3 , sum ;
        double average ; 
        num1 = r.nextInt(40+1)+10;
        num2 = r.nextInt(40+1)+10;
        num3 = r.nextInt(40+1)+10;
        System.out.print(num1);
        System.out.print(" " + num2);
        System.out.print(" " + num3);
        sum = num1 + num2 + num3 ;
        average = sum/3;
        System.out.println("\n"+ sum);
        System.out.printf("%.2f",average);
    }
} 

public class L2Q4 {
    public static void main(String[] args) {
        Scanner sc = new Scanner (System.in);
        System.out.println("Enter the number of seconds : ");
        int input = sc.nextInt();
        int sec = input % 60 ;
        int minute = input / 60 ;
        minute = minute / 60 ;
        int hour = minute % 60 ; 
        System.out.println(input + " sec is " + minute + " hours," + " " + hour + " minutes"+ " and " + sec + " seconds.");
    }
}

import java.util.Random;

public class L2Q5 {
    public static void main(String[] args) {
        Random r = new Random ();
        int random , p ;
        int sum =0 ;
        random = r.nextInt(10001);
        System.out.println(random);
        
        while (random > 0){
        //mathematical problem oo godddd
        p = random % 10 ;
        sum = sum + p ;
        random = random / 10 ;
        //loop again until reaches 0 
        }
        System.out.println("Sum : " + sum );
    }
}

import java.util.Scanner;

    class EnergytoheatWater {
        public static void CalculateEnergy() {     
        }
    }
public class L2Q6 {
    public static void main(String[] args) {
        Scanner sc = new Scanner (System.in);
        double M , Q , initialTemp , finalTemp , fahrenheit1 ,fahrenheit2 ;
        System.out.println("Enter amount of water in gram : ");
        M = sc.nextDouble();
        M = M/1000;
        //water in kg
        System.out.println("Enter initial temperature in fahrenheit : ");
        fahrenheit1 = sc.nextDouble();
        initialTemp = (fahrenheit1 - 32) / 1.8 ;
        //to celcius
        System.out.println("Enter final temperature of fahrenheit : ");
        fahrenheit2 = sc.nextDouble();
        finalTemp = (fahrenheit2 - 32) / 1.8 ;
        //to celcius
        Q = M*(finalTemp- initialTemp) * 4184 ;
        System.out.printf("The energy needed is %.6e", Q);
        //6 dp for exponent
    }
}
